<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout android:id="@+id/selCheckbox"
        style="@style/SelectorRow">
        <ImageView
            style="@style/Icon"
            app:srcCompat="@drawable/ic_checkbox_marked" />
        <TextView
            style="@style/SelectorText"
            android:text="Check"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/selDelete"
        style="@style/SelectorRow">
        <ImageView
            style="@style/Icon"
            app:srcCompat="@drawable/ic_delete_black_48" />
        <TextView
            style="@style/SelectorText"
            android:text="Delete"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/selEdit"
        style="@style/SelectorRow">
        <ImageView
            style="@style/Icon"
            app:srcCompat="@drawable/ic_page_next" />
        <TextView
            style="@style/SelectorText"
            android:text="Open"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/selNone"
        style="@style/SelectorRow">
        <ImageView
            style="@style/Icon"
            app:srcCompat="@drawable/ic_none" />
        <TextView
            style="@style/SelectorText"
            android:text="None"/>
    </LinearLayout>

</LinearLayout>