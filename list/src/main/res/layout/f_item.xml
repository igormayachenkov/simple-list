<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/fog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/fog"
    android:clipToPadding="false"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    android:paddingVertical="48dp">

    <!-- CARD WINDOW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="16dp">

        <EditText android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:hint="@string/item_name_hint"
            android:inputType="textPersonName" />

        <EditText android:id="@+id/txtDescr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:hint="@string/item_descr_hint"
            android:inputType="textMultiLine"/>

        <CheckBox android:id="@+id/chkState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:button="@drawable/bg_checkbox"
            android:paddingStart="5dp"
            android:text="@string/item_checked_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:clipToPadding="false">

            <ImageButton
                android:id="@+id/btnDel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_clickable"
                android:padding="10dp"
                android:src="@drawable/ic_delete_forever_black_48dp" />

            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_clickable"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/ic_done_black_48dp"
                android:focusable="true" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
